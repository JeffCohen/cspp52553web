= form_for @exam_user do |f|
  - if @exam_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam_user.errors.count, "error")} prohibited this exam_user from being saved:"
      %ul
        - @exam_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :identifier
    = f.text_field :identifier
  .field
    = f.label :in_session, "In Session?"
    = f.check_box :in_session
  .actions
    = f.submit 'Save'
