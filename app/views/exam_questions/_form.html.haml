= form_for @exam_question do |f|
  - if @exam_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam_question.errors.count, "error")} prohibited this exam_question from being saved:"
      %ul
        - @exam_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :kind
    = f.number_field :kind
  .actions
    = f.submit 'Save'
