= form_for @exam_answer do |f|
  - if @exam_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam_answer.errors.count, "error")} prohibited this exam_answer from being saved:"
      %ul
        - @exam_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :exam_option_id
    = f.number_field :exam_option_id
  .field
    = f.label :exam_user_id
    = f.number_field :exam_user_id
  .actions
    = f.submit 'Save'
